<Window x:Class="Sudoku.Views.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:Sudoku.Helpers"
        mc:Ignorable="d"
        Title="Sudoku Game"
        Height="720" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:IsErrorToBrushConverter x:Key="IsErrorToBrushConverter"/>
        <helpers:IsGivenToBrushConverter x:Key="IsGivenToBrushConverter"/>
        <helpers:StarConverter x:Key="StarConverter"/>
        <helpers:SudokuBorderThicknessConverter x:Key="SudokuBorderThicknessConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20" x:Name="BoardContainer" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Buttons: Back / Pause -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Width="30" Height="30" Command="{Binding BackCommand}" Style="{StaticResource MaterialDesignIconButton}">
                <materialDesign:PackIcon Kind="ArrowBack" Width="18" Height="18"/>
            </Button>

            <Button Grid.Column="2" Width="30" Height="30" Command="{Binding PauseCommand}" Style="{StaticResource MaterialDesignIconButton}">
                <materialDesign:PackIcon Kind="Pause" Width="18" Height="18"/>
            </Button>
        </Grid>

        <!-- Stats -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Mistakes" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding MistakeDisplay}" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="Score" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ScoreDisplay}" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="Time" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding TimerDisplay}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Sudoku Board -->
        <Grid Grid.Row="2" Margin="0,10">
            <ItemsControl ItemsSource="{Binding Board.Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="9" Columns="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black"
                                BorderThickness="{Binding Converter={StaticResource SudokuBorderThicknessConverter}}"
                                Background="{Binding IsError, Converter={StaticResource IsErrorToBrushConverter}}"
                                SnapsToDevicePixels="True">
                            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Foreground="{Binding IsGiven, Converter={StaticResource IsGivenToBrushConverter}}"
                                     BorderThickness="0"
                                     Tag="{Binding Index}"
                                     GotFocus="TextBox_GotFocus"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- Action Buttons: Undo / Erase / Hint -->
        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Command="{Binding UndoCommand}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" ToolTip="Undo" HorizontalAlignment="Left">
                <materialDesign:PackIcon Kind="Undo"/>
            </Button>

            <Button Grid.Column="1" Command="{Binding EraseCommand}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" ToolTip="Erase" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Erase"/>
            </Button>

            <Button Grid.Column="2" Command="{Binding HintCommand}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" ToolTip="Hint" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="LightbulbAlertOutline"/>
            </Button>
        </Grid>

        <!-- Number Buttons -->
        <UniformGrid Grid.Row="4" Rows="1" Columns="9" Margin="0,0,0,10" HorizontalAlignment="Stretch">
            <Button Content="1" Command="{Binding NumberCommand}" CommandParameter="1" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="2" Command="{Binding NumberCommand}" CommandParameter="2" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="3" Command="{Binding NumberCommand}" CommandParameter="3" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="4" Command="{Binding NumberCommand}" CommandParameter="4" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="5" Command="{Binding NumberCommand}" CommandParameter="5" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="6" Command="{Binding NumberCommand}" CommandParameter="6" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="7" Command="{Binding NumberCommand}" CommandParameter="7" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="8" Command="{Binding NumberCommand}" CommandParameter="8" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
            <Button Content="9" Command="{Binding NumberCommand}" CommandParameter="9" Style="{StaticResource MaterialDesignFlatButton}" FontSize="14"/>
        </UniformGrid>

        <!-- Pause Overlay -->
        <Grid x:Name="PauseOverlay"
              Background="#80000000"
              Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="5"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Border Background="White" CornerRadius="12" Padding="18" MaxWidth="300" MinWidth="260"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow3}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Game Paused" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <TextBlock Text="Time:" FontSize="14" Foreground="#2196F3" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TimerDisplay}" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="Mistakes:" FontSize="14" Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding MistakeDisplay}" FontSize="14" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Vertical" Margin="0,16,0,0" HorizontalAlignment="Center">
                        <Button Content="Resume" Width="140" Height="36" Margin="0,0,0,8"
                                Command="{Binding ResumeCommand}"
                                Background="#1565C0" Foreground="White"/>
                        <Button Content="Restart" Width="140" Height="36"
                                Command="{Binding RestartCommand}"
                                Background="#1565C0" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Game Over Overlay -->
        <Grid x:Name="GameOverOverlay"
              Background="#80000000"
              Visibility="{Binding IsGameOver, Converter={StaticResource BoolToVisibilityConverter}}"
              Grid.RowSpan="5"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Border Background="White" CornerRadius="12" Padding="18" MaxWidth="300" MinWidth="260"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevationShadow3}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding GameOverMessage}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=1}" Margin="2"/>
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=2}" Margin="2"/>
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=3}" Margin="2"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Score:" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding ScoreDisplay}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Time:" FontWeight="Bold" Margin="0,6,0,2"/>
                        <TextBlock Text="{Binding TimerDisplay}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Mistakes:" FontWeight="Bold" Margin="0,6,0,2"/>
                        <TextBlock Text="{Binding MistakeDisplay}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Difficulty:" FontWeight="Bold" Margin="0,6,0,2"/>
                        <TextBlock Text="{Binding Difficulty}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="Restart" Width="140" Height="36" Margin="0,16,0,0"
                            Command="{Binding RestartCommand}"
                            Background="#1565C0" Foreground="White"/>

                    <Button Content="New Game" Width="140" Height="36" Margin="0,8,0,0"
                            Command="{Binding BackCommand}"
                            Background="#1565C0" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
