<Window x:Class="Sudoku.Views.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku.Views" 
        xmlns:helpers="clr-namespace:Sudoku.Helpers"
        mc:Ignorable="d"
        Title="GameView" 
        Height="650"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:IsErrorToBrushConverter x:Key="IsErrorToBrushConverter"/>
        <helpers:IsGivenToBrushConverter x:Key="IsGivenToBrushConverter"/>
    </Window.Resources>

    <Grid x:Name="BoardContainer" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="btnBack" 
                Width="23" Height="23" 
                Click="btnBack_Click"
                Style="{StaticResource MaterialDesignIconButton}">
                <materialDesign:PackIcon Kind="ArrowBack"/>
            </Button>
            
            <Button Name="btnPause"  Grid.Column="2" 
                Width="23" Height="23" 
                Click="btnPause_Click"
                Style="{StaticResource MaterialDesignIconButton}">
                <materialDesign:PackIcon Kind="Pause"/>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Margin="10,0">
                <TextBlock Text="Difficulty" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Difficulty}" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="10,0">
                <TextBlock Text="Mistake" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding MistakeDisplay}" HorizontalAlignment="Center"/>
            </StackPanel>
    
            <StackPanel Grid.Column="2" Margin="10,0">
                <TextBlock Text="Timer" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding TimerDisplay}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10">
            <ItemsControl ItemsSource="{Binding Board.Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="9" Columns="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="0.6" Background="{Binding IsError, Converter={StaticResource IsErrorToBrushConverter}}">
                            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="{Binding IsGiven, Converter={StaticResource IsGivenToBrushConverter}}"
                                    BorderThickness="0"
                                    Tag="{Binding Index}"
                                    GotFocus="TextBox_GotFocus"
                                    MaxLength="1"
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        
        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Command="{Binding UndoCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    ToolTip="Undo"
                    Margin="5,0">
                <materialDesign:PackIcon Kind="Undo"/>
            </Button>
            
            <Button Grid.Column="1" 
                    Command="{Binding EraseCommand}"
                    HorizontalAlignment="Center" 
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    ToolTip="Erase"
                    Margin="5,0">
                <materialDesign:PackIcon Kind="Erase"/>
            </Button>
            
            <Button Grid.Column="2" 
                    Command="{Binding HintCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    ToolTip="Hint"
                    Margin="5,0">
                <materialDesign:PackIcon Kind="LightbulbAlertOutline"/>
            </Button>
        </Grid>
        
        <UniformGrid  Grid.Row="4"  Rows="1" Columns="9" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="1" Command="{Binding NumberCommand}" CommandParameter="1" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="2" Command="{Binding NumberCommand}" CommandParameter="2" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="3" Command="{Binding NumberCommand}" CommandParameter="3" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="4" Command="{Binding NumberCommand}" CommandParameter="4" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="5" Command="{Binding NumberCommand}" CommandParameter="5" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="6" Command="{Binding NumberCommand}" CommandParameter="6" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="7" Command="{Binding NumberCommand}" CommandParameter="7" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="8" Command="{Binding NumberCommand}" CommandParameter="8" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
            <Button Content="9" Command="{Binding NumberCommand}" CommandParameter="9" Style="{StaticResource MaterialDesignFlatButton}" FontSize="13"/>
        </UniformGrid>

        <Grid x:Name="PauseOverlay"
              Background="#80000000"
              Visibility="Collapsed"
              Opacity="0"
              Grid.RowSpan="5"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Border Background="White" CornerRadius="12" Padding="18" MaxWidth="300" MinWidth="260" 
                    VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Effect="{DynamicResource MaterialDesignElevationShadow3}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Width="56" Height="56" CornerRadius="28" 
                            Background="#FF8E44AD" HorizontalAlignment="Center">
                        <TextBlock Text="❚❚" Foreground="White" FontSize="26" FontWeight="Bold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Time" FontSize="14" Foreground="#2196F3" Margin="0,12,0,2" 
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PauseTime" Text="{Binding TimerDisplay}" FontSize="14" HorizontalAlignment="Center"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Mistake" FontSize="14" Foreground="#2196F3" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PauseMistake" Text="{Binding MistakeDisplay}" FontSize="14" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Vertical" Margin="0,16,0,0" HorizontalAlignment="Center">
                        <Button x:Name="btnResume" Content="Resume" Width="140" Height="36" Margin="0,0,0,8" 
                                Click="btnResume_Click"
                                Background="#1565C0" Foreground="White"/>
                        <Button x:Name="btnRestart" Content="Restart" Width="140" Height="36" Click="btnRestart_Click"
                                Background="#1565C0" Foreground="White"/>
                    </StackPanel>
                </StackPanel>                
            </Border>
        </Grid>
    </Grid>
</Window>
