<Window x:Class="Sudoku.Views.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:Sudoku.Helpers"
        mc:Ignorable="d"
        Title="Sudoku Game"
        Height="720" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="0" x:Name="BoardContainer" SnapsToDevicePixels="True" UseLayoutRounding="True">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#F9F9FF" Offset="0"/>
                <GradientStop Color="#F3E5F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.RowSpan="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Width="40" Height="40" Command="{Binding BackCommand}"
                    Style="{StaticResource MiniRoundedButton}" Background="#8E44AD">
                <materialDesign:PackIcon Kind="ArrowBack" Width="20" Height="20" Foreground="White"/>
            </Button>

            <Button Grid.Column="2" Width="40" Height="40" Command="{Binding PauseCommand}"
                    Style="{StaticResource MiniRoundedButton}" Background="#8E44AD">
                <materialDesign:PackIcon Kind="Pause" Width="20" Height="20" Foreground="White"/>
            </Button>
        </Grid>

        <Grid Grid.Row="2" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Mistakes" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#5B2C6F"/>
                <TextBlock Text="{Binding MistakeDisplay}" HorizontalAlignment="Center" Foreground="#8E44AD"/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock Text="Score" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#5B2C6F"/>
                <TextBlock Text="{Binding ScoreDisplay}" HorizontalAlignment="Center" Foreground="#8E44AD"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="Time" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#5B2C6F"/>
                <TextBlock Text="{Binding TimerDisplay}" HorizontalAlignment="Center" Foreground="#8E44AD"/>
            </StackPanel>

            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                <TextBlock Text="Difficulty" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#5B2C6F"/>
                <TextBlock Text="{Binding Difficulty}" HorizontalAlignment="Center" Foreground="#8E44AD"/>
            </StackPanel>
        </Grid>

        <ItemsControl Grid.Row="3" ItemsSource="{Binding Board.Cells}" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="9" Columns="9"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#5D3E7D"
                            BorderThickness="{Binding Converter={StaticResource SudokuBorderThicknessConverter}}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True"
                            Effect="{DynamicResource MaterialDesignElevationShadow2}">

                        <Border.Background>
                            <Binding Path="Index" Converter="{StaticResource BlockBackgroundConverter}"/>
                        </Border.Background>

                        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 TextAlignment="Center"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Tag="{Binding Index}"
                                 GotFocus="TextBox_GotFocus"
                                 MaxLength="1"
                                 PreviewTextInput="TextBox_PreviewTextInput"
                                 PreviewKeyDown="TextBox_PreviewKeyDown">

                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3E5F5"/>
                                            <Setter Property="Cursor" Value="IBeam"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsError}" Value="True">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsGiven}" Value="True">
                                            <Setter Property="Foreground" Value="#6C3483"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                            <Setter Property="Background" Value="#DCD6F7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="4" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Command="{Binding UndoCommand}"
                    Style="{StaticResource MiniRoundedButton}" Background="#9B59B6">
                <materialDesign:PackIcon Kind="Undo" Width="20" Height="20" Foreground="White"/>
            </Button>

            <Button Grid.Column="1" Command="{Binding EraseCommand}"
                    Style="{StaticResource MiniRoundedButton}" Background="#9B59B6">
                <materialDesign:PackIcon Kind="Erase" Width="20" Height="20" Foreground="White"/>
            </Button>

            <Button Grid.Column="2" Command="{Binding HintCommand}"
                    Style="{StaticResource MiniRoundedButton}" Background="#9B59B6">
                <materialDesign:PackIcon Kind="LightbulbAlertOutline" Width="20" Height="20" Foreground="White"/>
            </Button>
        </Grid>

        <UniformGrid Grid.Row="5" Rows="1" Columns="9" Margin="10,10,10,20">
            <Button Content="1" Command="{Binding NumberCommand}" CommandParameter="1" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="2" Command="{Binding NumberCommand}" CommandParameter="2" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="3" Command="{Binding NumberCommand}" CommandParameter="3" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="4" Command="{Binding NumberCommand}" CommandParameter="4" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="5" Command="{Binding NumberCommand}" CommandParameter="5" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="6" Command="{Binding NumberCommand}" CommandParameter="6" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="7" Command="{Binding NumberCommand}" CommandParameter="7" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="8" Command="{Binding NumberCommand}" CommandParameter="8" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
            <Button Content="9" Command="{Binding NumberCommand}" CommandParameter="9" Style="{StaticResource MiniRoundedButton}" Background="#AF7AC5"/>
        </UniformGrid>

        <Grid x:Name="PauseOverlay" Background="#80000000" Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}" Grid.RowSpan="6">
            <Border Background="White" CornerRadius="12" Padding="18" MaxWidth="300" MinWidth="260" VerticalAlignment="Center" HorizontalAlignment="Center" Effect="{DynamicResource MaterialDesignElevationShadow3}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Game Paused" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                    <TextBlock Text="Time:" FontSize="14" Foreground="#8E44AD" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TimerDisplay}" FontSize="14" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                    <TextBlock Text="Mistakes:" FontSize="14" Foreground="#8E44AD" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding MistakeDisplay}" FontSize="14" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                    <StackPanel Orientation="Vertical" Margin="0,16,0,0" HorizontalAlignment="Center">
                        <Button Content="Resume" Width="140" Height="36" Margin="0,0,0,8" Command="{Binding ResumeCommand}" Style="{StaticResource RoundedButton}" Background="#8E44AD"/>
                        <Button Content="Restart" Width="140" Height="36" Command="{Binding RestartCommand}" Style="{StaticResource RoundedButton}" Background="#9B59B6"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <Grid x:Name="GameOverOverlay" Background="#80000000" Visibility="{Binding IsGameOver, Converter={StaticResource BoolToVisibilityConverter}}" Grid.RowSpan="6">
            <Border Background="White" CornerRadius="12" Padding="18" MaxWidth="300" MinWidth="260" VerticalAlignment="Center" HorizontalAlignment="Center" Effect="{DynamicResource MaterialDesignElevationShadow3}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding GameOverMessage}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=1}" Margin="2"/>
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=2}" Margin="2"/>
                        <materialDesign:PackIcon Kind="Star" Width="28" Height="28" Foreground="{Binding StarCount, Converter={StaticResource StarConverter}, ConverterParameter=3}" Margin="2"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Score:" FontWeight="Bold" Margin="0,0,0,2" Foreground="#8E44AD"/>
                        <TextBlock Text="{Binding ScoreDisplay}" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                        <TextBlock Text="Time:" FontWeight="Bold" Margin="0,6,0,2" Foreground="#8E44AD"/>
                        <TextBlock Text="{Binding TimerDisplay}" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                        <TextBlock Text="Mistakes:" FontWeight="Bold" Margin="0,6,0,2" Foreground="#8E44AD"/>
                        <TextBlock Text="{Binding MistakeDisplay}" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                        <TextBlock Text="Difficulty:" FontWeight="Bold" Margin="0,6,0,2" Foreground="#8E44AD"/>
                        <TextBlock Text="{Binding Difficulty}" HorizontalAlignment="Center" Foreground="#9B59B6"/>
                    </StackPanel>
                    <Button Content="Restart" Width="140" Height="36" Margin="0,16,0,0" Command="{Binding RestartCommand}" Style="{StaticResource RoundedButton}" Background="#9B59B6"/>
                    <Button Content="New Game" Width="140" Height="36" Margin="0,8,0,0" Command="{Binding BackCommand}" Style="{StaticResource RoundedButton}" Background="#8E44AD"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
